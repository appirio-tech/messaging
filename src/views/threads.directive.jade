ul
  li(ng-repeat="thread in vm.threads track by $index")
    a.unread(ui-sref="messaging({ id: thread.id.substr(10), threadId: thread.id })" ng-class="{unread: thread.unreadCount > 0}")
      .app-name {{thread.subject}}

      .sender
        avatar(avatar-url="{{ thread.publishers[0].avatar }}")

        .name {{thread.publishers[0]}}

        time {{ thread.messages[thread.messages.length -1].createdAt | timeLapse }}

      p.message {{ thread.messages[thread.messages.length -1].body }}

.none(ng-show="vm.threads.length == 0") None